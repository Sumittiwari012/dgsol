<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Professional Profile Completion</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
  <style>
    body {
      background: #f4f7fc; /* Light blue-gray background */
      font-family: 'Poppins', sans-serif; /* Modern font */
      color: #333;
    }

    .container {
      max-width: 900px; /* Constrain width for better readability */
    }

    .card {
      border-radius: 1.5rem; /* More rounded corners */
      border: none;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08); /* Stronger, softer shadow */
      overflow: hidden; /* Ensures content stays within rounded corners */
    }

    .card-header-custom {
        background-color: #007bff; /* Primary blue for header */
        color: white;
        padding: 2rem 0; /* More vertical padding */
        border-bottom: none;
        text-align: center;
        margin-bottom: 2rem;
        border-radius: 1.5rem 1.5rem 0 0; /* Top rounded corners */
    }

    .card-title {
        font-weight: 700; /* Bolder title */
        font-size: 2.25rem; /* Larger title */
        margin-bottom: 0.5rem;
    }

    .card-text-light {
        color: rgba(255, 255, 255, 0.9); /* Slightly transparent white for subtitle */
        font-size: 1.1rem;
    }

    h2, h4 {
      color: #343a40;
    }

    .form-label {
      font-weight: 600;
      color: #495057;
      margin-bottom: 0.5rem; /* More space below labels */
      font-size: 0.95rem;
    }

    .form-select, .form-control {
      border-radius: 0.75rem; /* Slightly more rounded inputs */
      border: 1px solid #ced4da;
      padding: 0.75rem 1rem; /* More padding inside inputs */
      transition: border-color 0.2s, box-shadow 0.2s; /* Smooth transitions */
    }

    .form-select:focus, .form-control:focus {
      border-color: #86b7fe; /* Bootstrap primary focus color */
      box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25); /* Stronger, more visible focus ring */
    }

    hr {
      margin-top: 2.5rem; /* More spacing for HR */
      margin-bottom: 2.5rem;
      border-color: rgba(0, 0, 0, 0.1);
      opacity: 0.7; /* Slightly less opaque */
    }

    #addressSection {
      display: none;
    }

    .form-text {
      font-size: 0.85rem; /* Slightly smaller help text */
      color: #6c757d;
      margin-top: 0.25rem; /* Closer to the input */
    }

    .section-header {
      font-size: 1.35rem; /* Slightly larger section header */
      margin-bottom: 1.5rem; /* More space below header */
      font-weight: 600;
      color: #212529;
      border-bottom: 1px solid #e9ecef; /* Lighter border */
      padding-bottom: 0.75rem; /* More padding below border */
      position: relative; /* For potential future icon/decoration */
    }

    .btn-primary {
      background: linear-gradient(45deg, #007bff, #0056b3); /* Gradient for submit button */
      border: none;
      border-radius: 0.75rem; /* More rounded button */
      padding: 0.85rem 1.5rem;
      font-size: 1.1rem;
      font-weight: 600;
      transition: all 0.3s ease; /* Smooth hover effect */
    }

    .btn-primary:hover {
      background: linear-gradient(45deg, #0056b3, #003f7f); /* Darker gradient on hover */
      transform: translateY(-2px); /* Slight lift on hover */
      box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3); /* Subtle shadow on hover */
    }

    .required::after {
      content: " *";
      color: #dc3545; /* Bootstrap danger red */
      margin-left: 3px;
    }

    /* Bootstrap-Select custom styling for checkbox appearance */
    .dropdown-menu .inner.show {
        max-height: 250px; /* Adjust as needed */
        overflow-y: auto;
    }
    .bootstrap-select .dropdown-toggle .filter-option-inner-inner {
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }
    .bootstrap-select .dropdown-toggle {
        border-radius: 0.75rem; /* Match input styling */
        padding: 0.75rem 1rem; /* Match input padding */
        height: auto; /* Allow height to adjust */
        min-height: calc(1.5em + 1.5rem + 2px); /* Match Bootstrap form-control height */
    }
    .bootstrap-select .dropdown-toggle:focus,
    .bootstrap-select .dropdown-toggle.focus {
        outline: 0;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25); /* Match Bootstrap focus */
    }
    .bootstrap-select .dropdown-menu.inner.show .active a span.text {
        font-weight: 500; /* Make selected text stand out a bit */
    }
  </style>
</head>
<body>

  <div class="container py-5">
    <form action="/saveProfile" method="POST" id="profileCompletionForm" class="form-section">
      <div class="mb-4">
  <label class="form-label d-block">Are you registering as a:</label>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="roleType" id="professionalRadio" value="professional" checked>
    <label class="form-check-label" for="professionalRadio">Professional</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="roleType" id="volunteerRadio" value="volunteer">
    <label class="form-check-label" for="volunteerRadio">Volunteer</label>
  </div>
</div>
    <div class="row justify-content-center">
      <div class="col-lg-10 col-xl-9">
        <div class="card">
          <div class="card-header-custom">
            <h2 class="card-title mb-1">Professional Profile</h2>
            <p class="card-text-light">Unlock new opportunities by completing your profile.</p>
          </div>
          
          <div class="card-body p-5">
            <div class="section-header">Basic Information</div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="name" class="form-label ">Full Name</label>
                  <input type="text" class="form-control" id="name" name="name" placeholder="Your full legal name" >
                </div>
                
              </div>
              <div class="row">
                
                <div class="col-md-6 mb-3">
                  <label for="pno" class="form-label">Phone Number</label>
                  <input type="tel" class="form-control" id="pno" name="pno" placeholder="e.g., +919876543210" >
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="password" class="form-label ">Password</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Set a strong password">
                  <div class="form-text">Min 8 chars, incl. uppercase, lowercase, number.</div>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="edu" class="form-label ">Highest Education</label>
                  <input type="text" class="form-control" id="edu" name="edu" placeholder="e.g., M.Sc. Clinical Psychology">
                </div>
              </div>

              <div class="section-header mt-4">Professional Details</div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="exp" class="form-label ">Years of Experience</label>
                  <input type="number" class="form-control" id="exp" name="exp" min="0" placeholder="e.g., 5">
                </div>
                <div class="col-md-6 mb-3">
                  <label for="price" class="form-label ">Consultation Fee (per session)</label>
                  <div class="input-group">
                    <span class="input-group-text">â‚¹</span>
                    <input type="number" class="form-control" id="price" name="price" min="0" placeholder="e.g., 1500" >
                  </div>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="price" class="form-label">Number of patients can be attended per session</label>
                  <div class="input-group">
                    
                    <input type="number" class="form-control" id="pps" name="pps" min="1" placeholder="e.g., 1" >
                  </div>
                </div>
              </div>
              <div class="mb-3">
                <label for="certification" class="form-label">Certifications</label>
                <select id="certification" name="certification" class="form-select selectpicker" multiple data-live-search="true" data-actions-box="true">
                  <option value="">-- Select Certifications --</option>
                  <option value="CBT Certified">Cognitive Behavioral Therapy (CBT) Certified</option>
                  <option value="DBT Certified">Dialectical Behavior Therapy (DBT) Certified</option>
                  <option value="Trauma-Informed Care Certified">Trauma-Informed Care Certified</option>
                  <option value="NLP Practitioner">Neuro-Linguistic Programming (NLP) Practitioner</option>
                  <option value="Licensed Professional Counselor (LPC)">Licensed Professional Counselor (LPC)</option>
                  <option value="Clinical Psychologist">Clinical Psychologist</option>
                  <option value="Marriage and Family Therapist (MFT)">Marriage and Family Therapist (MFT)</option>
                  <option value="Addiction Counselor">Addiction Counselor</option>
                  <option value="Child and Adolescent Therapist">Child and Adolescent Therapist</option>
                  <option value="Grief Counselor">Grief Counselor</option>
                  <option value="Art Therapist">Art Therapist</option>
                  <option value="Music Therapist">Music Therapist</option>
                  <option value="Play Therapist">Play Therapist</option>
                  <option value="EMDR Certified">Eye Movement Desensitization and Reprocessing (EMDR) Certified</option>
                  <option value="Positive Psychology Certified">Positive Psychology Certified</option>
                  <option value="Mindfulness-Based Stress Reduction (MBSR) Certified">Mindfulness-Based Stress Reduction (MBSR) Certified</option>
                  <option value="Sex Therapist">Sex Therapist</option>
                  <option value="Hypnotherapist">Hypnotherapist</option>
                  <option value="Rehabilitation Counselor">Rehabilitation Counselor</option>
                  <option value="School Psychologist">School Psychologist</option>
                  <option value="Sports Psychologist">Sports Psychologist</option>
                  <option value="Acceptance and Commitment Therapy (ACT)">Acceptance and Commitment Therapy (ACT)</option>
                  <option value="Schema Therapy Certified">Schema Therapy Certified</option>
                  <option value="Psychodrama Practitioner">Psychodrama Practitioner</option>
                  <option value="Family Systems Therapy">Family Systems Therapy</option>
                  <option value="Narrative Therapy">Narrative Therapy</option>
                </select>
                <div class="form-text">Select your professional certifications.</div>
              </div>

              <div class="section-header mt-4">Consultation & Availability</div>
              <div class="mb-3">
                <label for="specialization" class="form-label ">Specialization(s)</label>
                <select id="specialization" name="specialization" class="form-select selectpicker"  data-actions-box="true" >
                  <option value="Anxiety">Anxiety</option>
                  <option value="Depression">Depression</option>
                  <option value="Relationship Issues">Relationship Issues</option>
                  <option value="Stress Management">Stress Management</option>
                  <option value="Child Therapy">Child Therapy</option>
                  <option value="Trauma & PTSD">Trauma & PTSD</option>
                  <option value="Eating Disorders">Eating Disorders</option>
                  <option value="Addiction">Addiction</option>
                  <option value="Grief Counseling">Grief Counseling</option>
                  <option value="OCD">Obsessive-Compulsive Disorder (OCD)</option>
                  <option value="ADHD">ADHD</option>
                  <option value="Sleep Disorders">Sleep Disorders</option>
                  <option value="Sexual Health">Sexual Health</option>
                </select>
                <div class="form-text">Select your areas of specialization.</div>
              </div>
              <div class="mb-3">
                <label for="lang" class="form-label ">Languages Spoken</label>
                <select id="lang" name="lang" class="form-select selectpicker" multiple data-live-search="true" data-actions-box="true" >
                  <option value="English">English</option>
                  <option value="Hindi">Hindi</option>
                  <option value="Bengali">Bengali</option>
                  <option value="Tamil">Tamil</option>
                  <option value="Telugu">Telugu</option>
                  <option value="Marathi">Marathi</option>
                  <option value="Gujarati">Gujarati</option>
                  <option value="Kannada">Kannada</option>
                  <option value="Malayalam">Malayalam</option>
                  <option value="Punjabi">Punjabi</option>
                  <option value="Urdu">Urdu</option>
                  <option value="French">French</option>
                  <option value="Spanish">Spanish</option>
                  <option value="German">German</option>
                </select>
                <div class="form-text">Select all languages you are proficient in.</div>
              </div>
              <div class="mb-3">
                <label for="mode" class="form-label ">Preferred Consultation Mode(s)</label>
                <select id="mode" name="mode" class="form-select selectpicker"  required>
                  <option value="Virtual">Virtual (Online)</option>
                  <option value="In-Person">In-Person (Clinic/Office)</option>
                  <option value="Hybrid">Hybrid (Both Virtual & In-Person)</option>
                </select>
                <div class="form-text">Choose your preferred ways to consult.</div>
              </div>
              <div class="mb-3" id="addressSection">
                <label for="address" class="form-label required">Clinic/Office Address</label>
                <textarea class="form-control" id="address" name="address" rows="3" placeholder="Enter your full clinic or office address"></textarea>
                <div class="form-text">This field is required if 'In-Person' or 'Hybrid' mode is selected.</div>
              </div>
              <div class="mb-3">
                <label for="treat_app" class="form-label ">Treatment Approaches</label>
                <select id="treat_app" name="treat_app" class="form-select selectpicker" multiple data-live-search="true" data-actions-box="true">
                  <option value="1:1 Therapy">1:1 Therapy</option>
                  <option value="Couples Therapy">Couples Therapy</option>
                  <option value="Family Therapy">Family Therapy</option>
                  <option value="Group Therapy">Group Therapy</option>
                  <option value="Psychiatric Consultation">Psychiatric Consultation</option>
                  <option value="Child/Adolescent Counseling">Child/Adolescent Counseling</option>
                  <option value="Career Counseling">Career Counseling</option>
                  <option value="Online Chat-based Counseling">Online Chat-based Counseling</option>
                  <option value="Phone Call Session">Phone Call Session</option>
                  <option value="Emergency Counseling">Emergency Counseling</option>
                  <option value="Cognitive Behavioral Therapy (CBT)">Cognitive Behavioral Therapy (CBT)</option>
                  <option value="Dialectical Behavior Therapy (DBT)">Dialectical Behavior Therapy (DBT)</option>
                  <option value="Psychodynamic Therapy">Psychodynamic Therapy</option>
                  <option value="Mindfulness-Based Therapy">Mindfulness-Based Therapy</option>
                  <option value="Solution-Focused Brief Therapy (SFBT)">Solution-Focused Brief Therapy (SFBT)</option>
                </select>
                <div class="form-text">Select the therapeutic approaches you utilize.</div>
              </div>
              <div class="mb-3">
                <label for="available" class="form-label">Available Days</label>
                <select id="available" name="available" class="form-select selectpicker" multiple data-actions-box="true" >
                  <option value="Monday">Monday</option>
                  <option value="Tuesday">Tuesday</option>
                  <option value="Wednesday">Wednesday</option>
                  <option value="Thursday">Thursday</option>
                  <option value="Friday">Friday</option>
                  <option value="Saturday">Saturday</option>
                  <option value="Sunday">Sunday</option>
                </select>
                <div class="form-text">Select the days you are typically available.</div>
              </div>

              <div class="mb-3">
                <label for="time_slots" class="form-label ">Available Time Slots in Indian Standard Time (IST)</label>
                <select id="time_slots" name="time_slots" class="form-select selectpicker" multiple data-live-search="true" data-actions-box="true" >
                    <option value="00:00-01:00">12:00 AM - 01:00 AM</option>
                    <option value="01:00-02:00">01:00 AM - 02:00 AM</option>
                    <option value="02:00-03:00">02:00 AM - 03:00 AM</option>
                    <option value="03:00-04:00">03:00 AM - 04:00 AM</option>
                    <option value="04:00-05:00">04:00 AM - 05:00 AM</option>
                    <option value="05:00-06:00">05:00 AM - 06:00 AM</option>
                    <option value="06:00-07:00">06:00 AM - 07:00 AM</option>
                    <option value="07:00-08:00">07:00 AM - 08:00 AM</option>
                    <option value="08:00-09:00">08:00 AM - 09:00 AM</option>
                    <option value="09:00-10:00">09:00 AM - 10:00 AM</option>
                    <option value="10:00-11:00">10:00 AM - 11:00 AM</option>
                    <option value="11:00-12:00">11:00 AM - 12:00 PM</option>
                    <option value="12:00-13:00">12:00 PM - 01:00 PM</option>
                    <option value="13:00-14:00">01:00 PM - 02:00 PM</option>
                    <option value="14:00-15:00">02:00 PM - 03:00 PM</option>
                    <option value="15:00-16:00">03:00 PM - 04:00 PM</option>
                    <option value="16:00-17:00">04:00 PM - 05:00 PM</option>
                    <option value="17:00-18:00">05:00 PM - 06:00 PM</option>
                    <option value="18:00-19:00">06:00 PM - 07:00 PM</option>
                    <option value="19:00-20:00">07:00 PM - 08:00 PM</option>
                    <option value="20:00-21:00">08:00 PM - 09:00 PM</option>
                    <option value="21:00-22:00">09:00 PM - 10:00 PM</option>
                    <option value="22:00-23:00">10:00 PM - 11:00 PM</option>
                    <option value="23:00-00:00">11:00 PM - 12:00 AM</option>
                </select>
                <div class="form-text">Select your recurring daily availability.</div>
              </div>

              <hr class="my-5">

              <div class="d-grid">
                <button class="btn btn-primary btn-lg" type="submit">Submit Profile</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
    const professionalRadio = document.getElementById('professionalRadio');
    const volunteerRadio = document.getElementById('volunteerRadio');
    const formSection = document.querySelector('.form-section');

    // Initial setup
    if (volunteerRadio.checked) {
      formSection.style.display = 'none';
    }

    professionalRadio.addEventListener('change', () => {
      formSection.style.display = 'block';
    });

    volunteerRadio.addEventListener('change', () => {
      // Hide the form
      formSection.style.display = 'none';
      // Redirect after short delay
      setTimeout(() => {
        window.location.href = "/volunteer";
      }, 500);
    });
  });

    document.addEventListener('DOMContentLoaded', function () {
      // Initialize Bootstrap-Select for all relevant dropdowns
      $('.selectpicker').selectpicker();

      const form = document.getElementById('profileCompletionForm');
      const modeSelect = document.getElementById('mode');
      const addressSection = document.getElementById('addressSection');
      const addressInput = document.getElementById('address');

      function toggleAddressInput() {
        const selectedModes = Array.from(modeSelect.selectedOptions).map(option => option.value);
        const requiresAddress = selectedModes.includes('In-Person') || selectedModes.includes('Hybrid');

        if (requiresAddress) {
          addressSection.style.display = 'block';
          addressInput.setAttribute('required', 'true');
        } else {
          addressSection.style.display = 'none';
          addressInput.removeAttribute('required');
          addressInput.value = ''; // Clear the input if hidden
        }
      }

      // Add event listener to the mode select dropdown
      // Note: For selectpicker, you might need to listen to 'changed.bs.select' event
      $(modeSelect).on('changed.bs.select', toggleAddressInput);

      // Call it once on page load to set initial state
      toggleAddressInput();

      document.addEventListener("DOMContentLoaded", function () {
    const volunteerRadio = document.getElementById("volunteerRadio");
    volunteerRadio.addEventListener("change", function () {
      if (volunteerRadio.checked) {
        window.location.href = "/volunteer";
      }
    });
  });
      // Handle form submission
      
    });
  </script>
</body>
</html>